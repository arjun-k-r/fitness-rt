{
  "rules": {
    "activities": {
      ".indexOn": "name",
      ".read": "auth != null",
      ".write": "false"
    },
    "foods": {
      "usda": {
        ".indexOn": "group",
        ".read": "true",
        ".write": "false"
      }
    },
    "muscle-group-exercises": {
      ".indexOn": "name",
      ".read": "auth != null",
      ".write": "false"
    },
    "$user_id": {
      ".read": "$user_id === auth.uid",
      ".write": "$user_id === auth.uid",
      "foods": {
        ".indexOn": "group"
      },
      "trends": {
        ".indexOn": "date"
      }
    }
  }
}